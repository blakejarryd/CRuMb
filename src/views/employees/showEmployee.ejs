<%- include ('../partials/header.ejs') %>
<div class = "container">
  <div class = "row">
    <div class = "col">
      <h5 class = "pb-2">Details</h5>
      <p>Username: <%= employee.username %> </p>
      <p>First Name: <%= employee.firstName %> </p>
      <p>Last Name: <%= employee.lastName %> </p>
      <p>Phone: <%= employee.phone %> </p>
      <p>Email: <%= employee.email %> </p>
      <!-- <div class = "row"> -->
          <a class ='text-decoration-none' href = "<%= baseURL %>/<%= employee.id %>/edit">
            <button type="button" class="btn btn-outline-primary">Edit</button>
          </a>
          <a class = 'text-decoration-none' href = "<%= baseURL %>">
            <button type="button" class="btn btn-outline-secondary">Cancel</button>
          </a>
          <form class ="mt-3" action = "<%= baseURL %>/<%= employee.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-outline-danger">Delete</button>
          </form>
      <!-- </div> -->
    </div> 
    <div class = "col">
      <h5 class = "pb-2"><%= employee.firstName + ' ' + employee.lastName %> Sales</h5>
      <div class = 'container'>
        <div class = 'row border font-weight-bold'>
          <div class = 'col'>DATE</div>
          <div class = 'col'>AMOUNT</div>
          <div class = 'col'>CUSTOMER</div>
        </div>
          <% for (sale of sales) { %>
            <a class = "text-decoration-none" href = "/sales/<%= sale.id %>">
              <div class = 'row border text-secondary'>
                <div class = 'col'><%= (sale.date).toLocaleDateString() %></div>
                <div class = 'col'><%= helper.stringToCurrency(sale.amount) %></div>
                <div class = 'col'><%= sale.customer.name %></div>
              </div>
            </a>
          <% } %>
      </div>
    </div>
  </div> 
</div>
<%- include ('../partials/footer.ejs') %>