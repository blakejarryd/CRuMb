<%- include ('../partials/header.ejs') %>
<div class = "container">
  <div class = "row>">
    <% let date = sale.date.toDateString() %>
    <p>Sale Date: <%= date %> </p>
  </div>
  <div class = "row>">
    <p>Customer: <a href = "/customers/<%= sale.customer.id %>"><%= sale.customer.name %> </a></p>
  </div>
  <div class = "row>">
    <p>Amount: <%= helper.stringToCurrency(sale.amount) %> </p>
  </div>
  <div class = "row>">
    <p>Description: <%= sale.description %> </p>
  </div>
  <div class = "row>">
    <p>Contact Person: <a href = "/employees/<%= sale.employee.id %>"><%= sale.employee.name %> </a></p>
</div>
<div class = "row justify-content-around">
  <div class = "col">
    <a class ='text-decoration-none' href = "<%= baseURL %>/<%= sale.id %>/edit">
      <button type="button" class="btn btn-outline-primary">Edit</button>
    </a>
    <a class = 'text-decoration-none' href = "<%= baseURL %>">
      <button type="button" class="btn btn-outline-secondary">Cancel</button>
    </a>
  </div>
  <div class = "col-10">
    <form action = "<%= baseURL %>/<%= sale.id %>?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-outline-danger">Delete</button>
    </form>
  </div>
</div>
<%- include ('../partials/footer.ejs') %>