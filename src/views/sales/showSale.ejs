<%- include ('../partials/header.ejs') %>
<h1>Sale Details</h1>
<div class = "sale-details">
  <p>Sale Date: <%= sale.date %> </p>
  <p>Customer: <%= sale.customer %> </p>
  <p>Amount: <%= sale.amount %> </p>
  <p>Description: <%= sale.description %> </p>
  <p>Contact Person: <%= sale.salesPerson %> </p>
</div>
<div class = "sale-nav">
  <a href = "<%= baseURL %>/<%= sale.id %>/edit">
    <button type = "button">Edit</button>
  </a>
  <form action = "<%= baseURL %>/<%= sale.id %>?_method=DELETE" method="POST">
    <input type = "submit" value = "Delete">
  </form>
</div>
