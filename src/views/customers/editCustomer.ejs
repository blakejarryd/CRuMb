<%- include ('../partials/header.ejs') %>
<div class = 'container'>
  <form action = "<%= baseURL %>/<%= customer.id %>?_method=PUT" method="POST">
    <div class="form-outline mb-4">
      <label class="form-label" for="name">Name</label>
      <input type="text" name = "name" class="form-control" value = "<%= customer.name %>"/>
    </div>
    <div class="form-outline mb-4">
      <label class="form-label" for="phone">Phone</label>
      <input type="string" name="phone" class="form-control" value = "<%= customer.phone %>"/>
    </div>
    <div class="form-outline mb-4">
      <label class="form-label" for="email">Email</label>
      <input type="email" name="email" class="form-control" value = "<%= customer.email %>" />
    </div>
    <div class="form-outline mb-4">
      <label class="form-label" for="address">Address</label>
      <input type="text" name="address" class="form-control" value = "<%= customer.address %>"/>
    </div>
    <div class="form-outline mb-4">
      <label class="form-label" for="contactPerson">Contact person</label>
      <input type="text" name="contactPerson" class="form-control" value = "<%= customer.contactPerson %>"/>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Save Customer</button>
      <a href = "<%=baseURL%>/<%=customer.id%>" >
      <button type="button" class="btn btn-outline-secondary">Cancel</button>
      </a>
    </div>
  </form>
</div>
<%- include ('../partials/footer.ejs') %>
